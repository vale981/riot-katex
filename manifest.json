{
    "manifest_version": 2,
    "name": "Riot KaTeX for matrix.tu-dresden.de",
    "version": "1.0.6",

    "description": "Renders formulars on matrix.tu-dresden.de chats using KaTeX.",

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["katex.min.js",
                   "auto-render.min.js",
                   "riot-katex.js"],
            "css": ["katex.min.css"],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "96": "icons/icon.png"
    },
    "web_accessible_resources": [
        "fonts/*.woff2"
    ]
}
